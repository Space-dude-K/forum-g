@using Newtonsoft.Json;
@model Entities.ViewModels.Forum.ForumBaseViewModel;
@{
    ViewData["Title"] = "ForumBase";
}
<link rel="stylesheet" href="~/css/forum-style.css" />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">

                <div class="ibox-content m-b-sm border-bottom mb-4">
                    <div class="p-xs ">
                        <div class="pull-left m-r-md">
                            <i class="fa fa-globe text-navy mid-icon"></i>
                        </div>
                        <h2>@Model.ForumTitle</h2>
                        <span>Test @Context.Request.RouteValues["categoryId"]</span>
                    </div>
                </div>

                <div class="forum-base-create-panel btn-group-md">
                    <button type="button" class="btn btn-light" 
                    onclick="location.href='@Url.RouteUrl("ForumTopicAdd", new {categoryId = @Context.Request.RouteValues["categoryId"], forumId = @Context.Request.RouteValues["forumId"]})'">Создать топик</button>
                </div>

                <div class="ibox-content container">

                    @foreach (var topic in Model.Topics)
                    {
                        <div class="mb-3">
                            <div class="row bg-light text-dark rounded-div">
                                <div class="col-md-9">
                                    <div class="forum-icon">
                                        <i class="fa fa-shield"></i>
                                    </div>
                                    <a href=@Url.RouteUrl("TopicPosts", new { categoryId = @Context.Request.RouteValues["categoryId"], forumId = topic.ForumBaseId, topicId = topic.Id, pageId = 1 }) class="forum-item-title">@topic.Name</a>
                                    <div class="forum-sub-title">Автор: @topic.Author, @topic.CreatedAt</div>
                                </div>
                                <div class="col-md-1">
                                    <span class="font-weight-bold">
                                        @topic.TotalViews
                                    </span>
                                    <div>
                                        <small>Просмотров</small>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <span class="font-weight-bold">
                                        @topic.TotalPosts
                                    </span>
                                    <div>
                                        <small>Ответов</small>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>